{
  "flowName": "harmonize-flow",
  "description": "makes things",
  "contentDatabase": "state-conductor-content",
  "modulesDatabase": "state-conductor-modules",
  "context": [
    {
      "domain": "collection",
      "value": "flow-time"
    }
  ],
  "initialState": "needs-envelope",
  "states": [
    {
      "stateName": "needs-envelope",
      "description": "makes the envelope",
      "actions": [
        {
          "actionModule": "/state-conductor/actions/make-envelope.sjs"
        }
      ],
      "transitions": [
        {
          "targetState": "needs-headers"
        }
      ]
    },
    {
      "stateName": "needs-headers",
      "description": "makes the envelope's headers",
      "actions": [
        {
          "actionModule": "/state-conductor/actions/make-headers.sjs"
        }
      ],
      "transitions": [
        {
          "targetState": "needs-triples"
        }
      ]
    },
    {
      "stateName": "needs-triples",
      "description": "makes the envelope's triples",
      "actions": [
        {
          "actionModule": "/state-conductor/actions/make-triples.sjs"
        }
      ]
    }
  ]      
}