{
  "flowName": "kafka-data-flow",
  "Comment": "processes data from the MarkLogic Kafka Connector",
  "contentDatabase": "state-conductor-content",
  "modulesDatabase": "state-conductor-modules",
  "context": [
    {
      "domain": "collection",
      "value": "kafka-data"
    }
  ],
  "StartAt": "needs-envelope",
  "States": {
    "needs-envelope": {
      "Type": "Task",
      "Comment": "wraps the content in an envelope",
      "Resource": "/state-conductor/actions/make-envelope.sjs",
      "Next": "run-dhf5-flow"
    },
    "run-dhf5-flow": {
      "Type": "Task",
      "End": true,
      "Comment": "runs a dhf 5 flow",
      "Resource": "/state-conductor/actions/dhf5RunFlowStepAction.sjs",
      "Parameters": {
        "flowName": "testFlow",
        "step": 1
      }
    }
  }
}