{
  "flowName": "kafka-data-flow",
  "Comment": "processes data from the MarkLogic Kafka Connector",
  "contentDatabase": "state-conductor-content",
  "modulesDatabase": "state-conductor-modules",
  "context": [
    {
      "domain": "collection",
      "value": "kafka-data"
    }
  ],
  "StartAt": "needs-envelope",
  "states": [
    {
      "stateName": "needs-envelope",
      "Type": "Task",
      "Comment": "wraps the content in an envelope",
      "actions": [
        {
          "actionModule": "/state-conductor/actions/make-envelope.sjs"
        }
      ],
      "transitions": [
        {
          "Next": "run-dhf5-flow"
        }
      ]
    },
    {
      "stateName": "run-dhf5-flow",
      "Type": "Task",
      "End": true,
      "Comment": "runs a dhf 5 flow",
      "actions": [
        {
          "actionModule": "/state-conductor/actions/dhf5RunFlowStepAction.sjs",
          "options": {
            "flowName": "testFlow",
            "step": 1
          }
        }
      ]
    }
  ]      
}