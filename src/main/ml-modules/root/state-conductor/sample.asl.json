{
  "Comment": "does things",
  "mlDomain": {
    "contentDatabase": "content-db",
    "modulesDatabase": "modules-db",
    "context": [
      {
        "scope": "collection",
        "value": "my-cool-doc"
      },
      {
        "scope": "directory",
        "value": "/my/cool/doc/"
      },
      {
        "scope": "custom",
        "value": "{\"andQuery\":{\"queries\":[{\"collectionQuery\":{\"uris\":[\"flow-time\"]}}, {\"elementValueQuery\":{\"element\":[\"name\"], \"text\":[\"Cobb Pauley\"], \"options\":[\"lang=en\"]}}]}}"
      }
    ]
  },
  "StartAt": "A",
  "States": {
    "A": {
      "Type": "Choice",
      "Comment": "initial state of the flow",
      "Resource": "/uri/to/action1.sjs",
      "Choices": [
        {
          "Resource": "/uri/to/condition.sjs",
          "Next": "B"
        },
        {
          "Resource": "/uri/to/condition2.sjs",
          "Next": "C"
        }
      ],
      "Default": "D"
    },
    "B": {
      "Type": "Task",
      "Comment": "updates a property",
      "Resource": "/uri/to/action3.sjs",
      "Next": "C"
    },
    "C": {
      "Type": "Task",
      "Resource": "/uri/to/action4.sjs",
      "Next": "D"
    },
    "D": {
      "Type": "Task",
      "End": true,
      "Resource": "/uri/to/action3.sjs"
    }
  }  
}